# Example environment variables for e-Library
# Copy to .env and fill with production values

# Security
ELIBRARY_SECRET_KEY=replace-me-with-a-secure-random-string
ELIBRARY_DEBUG=False
ELIBRARY_PRODUCTION=False

# Hosts (comma-separated, required if ELIBRARY_PRODUCTION=True)
ELIBRARY_ALLOWED_HOSTS=localhost,127.0.0.1

# Logging
ELIBRARY_LOG_TO_FILE=False
ELIBRARY_LOG_FILE=elibrary.log

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email (example for SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
